{{>layout/header}}
<div class="d-flex justify-content-center mt-2">
    <div class="row mx-0" style="width: 800px;">
        <form id="memberSignUpForm" action="/member/update" method="post">
            <div>
                <h1>마이페이지</h1>
            </div>

            <div class="form-group mt-3">
                <label for="id" class="form-label">아이디</label>
                <input type="text" class="form-control" id="id" name="id" placeholder="아이디" value="{{#mypage}}{{id}}{{/mypage}}" disabled>
            </div>

            <div class="form-group  mt-3">
                <label for="name" class="form-label">이름</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="이름" value="{{#mypage}}{{name}}{{/mypage}}" required>
            </div>

            <div class="d-flex align-items-end flex-column">
                <div class="col alien-end">
                    <button type="submit" class="btn btn-primary mt-3">수정</button>
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        </form>
    </div>
</div>
{{>layout/footer}}